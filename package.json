{
  "name": "gem-devtools",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "lint": "tsc --noEmit && eslint --ext .ts --fix src/",
    "start": "web-ext --config web-ext.config.js run",
    "build": "webpack --mode=development",
    "build:xpi": "npm run build && web-ext --config web-ext.config.js sign",
    "build:zip": "npm run build && web-ext --config web-ext.config.js build",
    "watch": "npm run build -- --watch"
  },
  "author": "mantou132",
  "license": "ISC",
  "dependencies": {
    "webextension-polyfill-ts": "^0.9.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "babel-eslint": "^10.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "file-loader": "^4.3.0",
    "html-webpack-plugin": "^4.0.1",
    "husky": "^2.7.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.19.1",
    "ts-loader": "^6.2.2",
    "typescript": "^3.8.3",
    "url-loader": "^2.3.0",
    "web-ext": "^4.1.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "git add"
    ]
  }
}
